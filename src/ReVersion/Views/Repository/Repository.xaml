<UserControl x:Class="ReVersion.Views.Repository.Repository"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReVersion.Views.Repository"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <CheckBox></CheckBox>

        <StackPanel Grid.Column="1">
            <TextBlock FontSize="18" Text="{Binding Name}"></TextBlock>
            <TextBlock FontSize="8" Foreground="DarkGray" Text="{Binding Url}"></TextBlock>
        </StackPanel>
        <Button Grid.Column="2" Content="Download"></Button>
    </Grid>
</UserControl>
