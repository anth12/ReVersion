<UserControl x:Class="ReVersion.Views.Repository.Repository"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReVersion.Views.Repository"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition SharedSizeGroup="WrapPannelGroup"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <CheckBox></CheckBox>

        <StackPanel Grid.Column="1">
            <TextBox Background="Transparent" BorderThickness="0" Text="{Binding Name, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" FontSize="18" MaxWidth="300" />
            <TextBox Background="Transparent" BorderThickness="0" Text="{Binding Url, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" FontSize="8" MaxWidth="300" Foreground="DarkGray" />
        </StackPanel>
        <Button Grid.Column="2" Content="Checkout"></Button>
    </Grid>
</UserControl>
